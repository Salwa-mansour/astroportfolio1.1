---
import SocailLink from '../components/socailLinks.astro';
---

<footer id="colophon" class="site-footer">
    <div class="site-info">

        <div class="copy-rights">
            <p class="copy-write">
                Copyright reserved for salwa &copy; <span id="year-copyright">2022 </span></p>
            <!--copy-write-->
        </div>
        
<SocailLink />
        
    </div>
    <!--git.site-info -->
</footer><!-- #colophon -->

<style>
    /* ----------------- footer stylings --------------------- */
.site-footer {
	/* outline: 1px solid red; */
	background: hsl(212, 77%, 12%);

}

.site-footer .site-info {
	background-color: rgba(0, 0, 0, 0.5);
	width: 100%;
	height: 100%;
	padding: .75rem 5vw;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.site-footer .widget_block {
	margin-bottom: 0;
	width: 10rem;
}

.site-footer .social-links {
	margin: 0;
}

.site-footer .social-links {
	/* outline: 1px solid green; */
	justify-content: flex-end;
	/* gap: .9rem; */
}
.social-link{
	margin-right:.9rem ;
}
.site-footer .social-links .wp-block-social-link {
	border: none;
}


.site-footer .social-links:not(.is-style-logos-only) .social-link-youtube:hover,
.site-footer .social-links:not(.is-style-logos-only) .social-link-linkedin:hover,
.site-footer .social-links:not(.is-style-logos-only) .social-link-github:hover ,
.site-footer .social-links:not(.is-style-logos-only) .social-link-twitter:hover {
	background-color: #FF8C28;
}
p.copy-write{
	font-size: calc(12px + (16 - 12) * ((100vw - 300px) / (1600 - 300)));
	margin-bottom: 0;
}
</style>