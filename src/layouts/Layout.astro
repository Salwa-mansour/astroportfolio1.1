---
import GlobalStyles from '../components/GlobalStyles.astro';
import GlobalScript from '../components/GlobalScript.astro';	
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import Loader from '../components/loader.astro';
import ContactForm from '../components/contactForm.astro';

// import Icon from '../images/icon.JPG';
// import '../css/main.css';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url) ;

export interface Props{
	title?:string;
	hasHeader?:boolean;
	hasForm?:boolean;
	
}

const {title ="Salwa Coding",
	   hasHeader = true,
	   hasForm = true,
       } = Astro.props as Props;




---
<!DOCTYPE html>
<html lang={lang} >
<head>
	<meta charset="UTF-8">

    <!-- <meta http-equiv="refresh" content="0;url=/en/" /> -->
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta property="og:title" content="Salwa Coding Website" />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://salwacoding.com/" />
	<meta property="og:image:url" content="./images/sitesmallimage2compressed.jpg" />
	<meta property="og:description" content="Hi, I'm Salwa front-end and WordPress web developer." />
	<meta property="og:image" content="./images/sitesmallimage2compressed.jpg">
	<meta property="og:image:type" content="image/jpg">
	<meta property="og:image:width" content="200">
	<meta property="og:image:height" content="200">
	

	<!-- <link rel="icon" href="" type="image/icon type"> -->
	<GlobalStyles/>
    <title>{title}</title>
	<!-- <link rel="manifest" href="/manifest.json" crossorigin="use-credentials"> -->
	<!-- <link rel="stylesheet" href="./css/style.css"> -->
	<!-- <link rel="stylesheet" href="./dist/main.css"> -->

</head> 

<body class="home ">
	
	
	<div id="page" class="stop-animation">
	<!-- <Loader/> -->
	{hasHeader &&<Header/>}

	<slot/>
	{hasForm && <ContactForm/>}
	<Footer/>
    </div><!-- #page -->


<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/ScrollTrigger.min.js"></script>
<GlobalScript/>
</body>